@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<span class="header">@Html.DisplayFor(model => model.Name)</span>

<hr>

<td>Description: @Html.DisplayFor(model => model.Description)</p>

<p>Price: @Html.DisplayFor(model => model.Price)</p>

@* Here is where we could get fun and use a conditional to render boxing stars instead of the word *@
<p>Rating: 
@for (int i = 0; i < (int) Model.Rating+1; i++)
{
  <img src="~/img/star.png" height="20px">
  @* <span class="star"></span> *@
}
</p>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This treat is not associated with any flavors yet</p>
}
else
{
  <h4>Flavors associated with this treat</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Flavor.Name}", "Details", "Flavors", new { id = join.Flavor.FlavorId })</li>
      @using (Html.BeginForm("DeleteFlavor", "Treats"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete" class="btn btn-default">
      }
    }
  </ul>
}
<tr>
<td>@Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId })</td> |
<td>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</td> |
<td>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</td> |
<td>@Html.ActionLink("Back to Treats", "Index")</td>
</tr>