@{
  Layout = "_Home";
}

@model List<PierreTreats.Models.Flavor>;

<div class="center">
  <span class="header">Pierre's Sweet Treats</span>
  <hr>
  <div class="contentbox">
    @if (@Model.Count == 0 && User.Identity.IsAuthenticated)
    {
      <p>No Flavor categories have been created yet:
        @Html.ActionLink("Add new Flavor", "Create", "Flavors")</p>
    }
    else
    {
      <p><span class="flavor">@Html.ActionLink("See all Flavors", "Index", "Flavors")</span></p>
      <p><span class="flavor">@Html.ActionLink("See all Treats", "Index", "Treats")</span></p>
    }
  </div>
  <div class="navbar">
    @Html.ActionLink("Create an account", "Index", "Account")
    <span class="padding"><img src="../img/star.png" height="20px"></span>
    @Html.ActionLink("Log in", "Login", "Account")
  </div>
</div>
