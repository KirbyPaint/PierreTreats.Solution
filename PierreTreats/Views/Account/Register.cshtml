@{
  Layout = "_Layout";
}

@using PierreTreats.ViewModels

@model RegisterViewModel

<span class="header">Register a New User</span>
<hr>
<div class="contentbox center">
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    <p>@Html.LabelFor(user => user.Email):
    @Html.TextBoxFor(user => user.Email, new { @required="required" })</p>
  
    <p>@Html.LabelFor(user => user.Password):
    @Html.PasswordFor(user => user.Password, new { @required="required" })</p>
  
    <p>@Html.LabelFor(user => user.ConfirmPassword):
    @Html.PasswordFor(user => user.ConfirmPassword, new { @required="required" })</p>
  
    <input type="submit" value="Register" class="btn btn-success"/>
  }
</div>