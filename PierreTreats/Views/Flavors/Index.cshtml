@{
  Layout = "_Layout";
}

@using PierreTreats.Models;

<div class="center">
  @using (Html.BeginForm())
  {
    <span class="header">Flavors: </span>
    @Html.TextBox("userInput")
    <input type="submit" value="Search Flavors" class="btn btn-info">
  }

  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet</h3>
  }

  <ul>
    @foreach (Flavor flavor in Model)
    {
      <div class="contentbox flavor">
        <li>
          @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId }) |
          @for (int i = 0; i < (int)(flavor.Rating + 1); i++)
          {
            <img src="../img/star.png" height="20px">
          }
        </li>
      </div>
    }
  </ul>

  <div class="navbar">
    @Html.ActionLink("Add new flavor", "Create")<span class="padding"><img src="../img/star.png"
        height="20px"></span>@Html.ActionLink("Return Home", "Index", "Home")
  </div>
</div>
