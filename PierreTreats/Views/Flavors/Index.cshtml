@{
  Layout = "_Layout";
}

@using PierreTreats.Models;

<span class="header">Flavors</span>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet</h3>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<tr>
<td>@Html.ActionLink("Add new flavor", "Create")</td> |

<td>@Html.ActionLink("Back", "Index", "Home")</td>
</tr>
