@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Flavor;

<span class="header">Flavor details</span>

<hr>
<div class="contentbox">
<h3>Flavor @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<hr>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not have any associated treats yet</p>
}
else
{
  <h4>Treats with this flavor:</h4>

  <div class="center">
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <hr>
        <li>@Html.ActionLink($"{@join.Treat.Name}", "Details", "Treats", new { id = join.Treat.TreatId }) | @join.Treat.Description | $@join.Treat.Price</li>
        @using (Html.BeginForm("DeleteTreat", "Flavors"))
        {
          @Html.Hidden("joinId", @join.FlavorTreatId)
          <input type="submit" value="Delete" class="btn btn-danger">
        }
      }
    </ul>
  </div>
}
</div>

  <div class="navbar">
    @Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })
    <span class="padding"><img src="~/img/star.png" height="20px"></span>
    @Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })
    <span class="padding"><img src="~/img/star.png" height="20px"></span>
    @Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })
    <span class="padding"><img src="~/img/star.png" height="20px"></span>
    @Html.ActionLink("Back to All Flavors", "Index")
  </div>